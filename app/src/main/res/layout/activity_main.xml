<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EditText"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ingrese su nombre"
        android:layout_marginTop="25dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombre" />

    <ToggleButton
        android:id="@+id/botonTogle"
        android:textOn="ACTIVO"
        android:textOff="DESACTIVO"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:ems="10"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintTop_toBottomOf="@+id/botonTogle" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:text="Option 1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        />
    <CheckBox
        android:id="@+id/checkbox2"
        android:text="Option 2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintTop_toBottomOf="@+id/checkbox1"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioGroup"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintTop_toBottomOf="@+id/checkbox2" />

    <RadioGroup
        android:layout_width="230dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:id="@+id/GrupRadio"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        >
        <RadioButton
            android:textSize="25sp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/radio1"
            android:text="Radio 1"
            />
        <RadioButton
            android:textSize="25sp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/radio2"
            android:text="Radio 2"
            />
    </RadioGroup>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageButton"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintTop_toBottomOf="@+id/GrupRadio" />


    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="356dp"
        android:layout_height="49dp"
        android:text="Ingresar"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintTop_toBottomOf="@+id/textView6"

        />

</androidx.constraintlayout.widget.ConstraintLayout>